{% extends 'admin.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <section id="show_amenities">
        <h1>Services</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ amenity.id }}</td>
                </tr>
                <tr>
                    <th>Nom du service</th>
                    <td>{{ amenity.nameAmenity }}</td>
                </tr>
                <tr>
                    <th>Tarif</th>
                    <td>{{ amenity.priceAmenity }}</td>
                </tr>
                <tr>
                    <th>Description du service</th>
                    <td>{{ amenity.descriptionAmenity |raw }}</td>
                </tr>
                <tr>
                    <th>Image du service</th>
                    <td><img src="{{ asset('uploads/photos/' ~ amenity.imgAmenity) }}" alt="Image du service" width="100"></td>
                </tr>
            </tbody>
        </table>

        <div class="links">
        <a class="btn" href="{{ path('amenities_admin') }}" rel="noopener noefferer">Retour</a>

        <a class="btn edit" href="{{ path('amenities_edit', {'id': amenity.id}) }}" rel="noopener noefferer">Modifier</a>

        {{ include('amenities/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
