{% extends 'admin.html.twig' %}

{% block title %}Catégorie de fournisseur{% endblock %}

{% block body %}
<section id="show_category_supplier">
    <h1>Catégorie de fournisseur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category_supplier.id }}</td>
            </tr>
            <tr>
                <th>Nom de categorie</th>
                <td>{{ category_supplier.nameCategory }}</td>
            </tr>
        </tbody>
    </table>

    <div class="links">
    <a class="btn" href="{{ path('category_suppliers_admin') }}" rel="noopener noefferer">Retour</a>
    <a class="btn edit" href="{{ path('category_suppliers_edit', {'id': category_supplier.id}) }}" rel="noopener noefferer">Modifier</a>
    <form method="post" action="{{ path('category_suppliers_delete', {'id': category_supplier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category_supplier.id) }}">
        <button class="btn">Supprimer</button>
    </form>
    </div>
    </section>
{% endblock %}
