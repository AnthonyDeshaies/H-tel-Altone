{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <h1>Contacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Naom du contact</th>
                <td>{{ contact.nameContact }}</td>
            </tr>
            <tr>
                <th>Prénom du contact</th>
                <td>{{ contact.firstNameContact }}</td>
            </tr>
            <tr>
                <th>Mail du contact</th>
                <td>{{ contact.mailContact }}</td>
            </tr>
            <tr>
                <th>Contenut</th>
                <td>{{ contact.textContact |raw }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contacts_index') }}">Retour à la liste des contacts</a>

    <a href="{{ path('contacts_edit', {'id': contact.id}) }}">modifier contact</a>

    {{ include('contacts/_delete_form.html.twig') }}
{% endblock %}
