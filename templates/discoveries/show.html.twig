{% extends 'admin.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
<section id="show_discoveries" class="container">
    <h1>Activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discovery.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'activité</th>
                <td>{{ discovery.nameDiscovery }}</td>
            </tr>
            <tr>
                <th>Description de l'activité</th>
                <td>{{ discovery.descriptionDiscovery |raw}}</td>
            </tr>
            <tr>
                <th>Image de l'activité</th>
                <td><img src="{{ asset('uploads/photos/' ~ discovery.imgDiscovery) }}" alt="Image tourisme" width="100"></td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ discovery.cpDiscovery }}</td>
            </tr>
            <tr>
                <th>Commune de l'activité</th>
                <td>{{ discovery.cityDiscovery }}</td>
            </tr>
            <tr>
                <th>Coordonnée latitude de l'activité</th>
                <td>{{ discovery.latitudeDiscovery }}</td>
            </tr>
            <tr>
                <th>Coordonnée longitude de l'activité</th>
                <td>{{ discovery.longitudeDiscovery }}</td>
            </tr>
        </tbody>
    </table>

    <div class="links">
    <a class="btn" href="{{ path('discoveries_admin') }}" rel="noopener noefferer">Retour</a>

    <a class="btn edit" href="{{ path('discoveries_edit', {'id': discovery.id}) }}" rel="noopener noefferer">Modifier</a>

    {{ include('discoveries/_delete_form.html.twig') }}
</section>
{% endblock %}
