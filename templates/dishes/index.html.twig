{% extends 'base.html.twig' %}

{% block title %}Index des plats{% endblock %}

{% block body %}
    <h1>Index des plats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de plat</th>
                <th>Description du plat</th>
                <th>Prix du plat</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.nameDish }}</td>
                <td>{{ dish.descriptionDish |raw }}</td>
                <td>{{ dish.priceDish }}</td>
                <td>{{ dish.CategoryDishes.nameCategory }}</td>
                <td>
                    <a href="{{ path('dishes_show', {'id': dish.id}) }}" rel="noopener noefferer">Voir</a>
                    <a href="{{ path('dishes_edit', {'id': dish.id}) }}" rel="noopener noefferer">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dishes_new') }} rel="noopener noefferer"">Créer un nouveau plat</a>
{% endblock %}
