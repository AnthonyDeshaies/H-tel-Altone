{% extends 'base.html.twig' %}

{% block title %}Dishes index{% endblock %}

{% block body %}
    <h1>Dishes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameDish</th>
                <th>DescriptionDish</th>
                <th>PriceDish</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.nameDish }}</td>
                <td>{{ dish.descriptionDish }}</td>
                <td>{{ dish.priceDish }}</td>
                <td>
                    <a href="{{ path('dishes_show', {'id': dish.id}) }}">show</a>
                    <a href="{{ path('dishes_edit', {'id': dish.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dishes_new') }}">Create new</a>
{% endblock %}
