{% extends 'admin.html.twig' %}

{% block title %}Administration des boissons{% endblock %}

{% block body %}
    <section id="drinks_admin">
        <h1>Administration des boissons</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de la boisson</th>
                    <th>Catégorie</th>
                    <th>Détail</th>
                    <th>Tarif</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for drink in drinks %}
                <tr>
                    <td>{{ drink.id }}</td>
                    <td>{{ drink.nameDrink }}</td>
                    <td>{{ drink.CategoryDrinks.nameCategory }}</td>
                    <td>{{ drink.detailDrink |raw }}</td>
                    <td>{{ drink.priceDrink }}</td>
                    <td>
                        <a class="show" href="{{ path('drinks_show', {'id': drink.id}) }}" rel="noopener noefferer">Voir</a>
                        <a class="edit" href="{{ path('drinks_edit', {'id': drink.id}) }}" rel="noopener noefferer">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas d'enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn" href="{{ path('drinks_new') }}" rel="noopener noefferer">Créer une nouvelle boisson</a>
    </section>
{% endblock %}
