{% extends 'base.html.twig' %}

{% block title %}Index des boissons{% endblock %}

{% block body %}
    <h1>Index des boissons</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de la boisson</th>
                <th>Catégorie</th>
                <th>Détail</th>
                <th>Tarif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for drink in drinks %}
            <tr>
                <td>{{ drink.id }}</td>
                <td>{{ drink.nameDrink }}</td>
                <td>{{ drink.CategoryDrinks.nameCategory }}</td>
                <td>{{ drink.detailDrink |raw }}</td>
                <td>{{ drink.priceDrink }}</td>
                <td>
                    <a href="{{ path('drinks_show', {'id': drink.id}) }}">Voir</a>
                    <a href="{{ path('drinks_edit', {'id': drink.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('drinks_new') }}">Créer une nouvelle boisson</a>
{% endblock %}
