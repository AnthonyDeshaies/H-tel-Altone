{% extends 'admin.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <h1>Administration des réservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de début de séjour</th>
                <th>Date de fin de séjour</th>
                <th>Nombre de participants</th>
                <th>Transport jusqu'à l'hôtel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.dateStartReservation ? reservation.dateStartReservation|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.dateEndReservation ? reservation.dateEndReservation|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.nbPeopleReservation }}</td>
                <td>{{ reservation.transportReservation ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">Voir</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">Créer une nouvelle réservation</a>
{% endblock %}
