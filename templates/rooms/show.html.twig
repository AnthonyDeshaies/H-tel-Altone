{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <h1>Chambres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Nom/Numéro de chambre</th>
                <td>{{ room.nameRoom }}</td>
            </tr>
            <tr>
                <th>Type de chambre</th>
                <td>{{ room.typeRoom.nameType }}</td>
            </tr>
            <tr>
            <tr>
                <th>Tarif</th>
                <td>{{ room.priceRoom }}</td>
            </tr>
            <tr>
                <th>Vue</th>
                <td>{{ room.viewRoom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rooms_index') }}">Retour à la liste</a>

    <a href="{{ path('rooms_edit', {'id': room.id}) }}">Modifier</a>

    {{ include('rooms/_delete_form.html.twig') }}
{% endblock %}
