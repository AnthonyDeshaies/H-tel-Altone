{% extends 'base.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
    <h1>Fournisseurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Nom fournisseur</th>
                <td>{{ supplier.nameSupplier }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ supplier.CategorySuppliers.nameCategory }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ supplier.descriptionSupplier |raw }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ supplier.adressSupplier }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ supplier.cpSupplier }}</td>
            </tr>
            <tr>
                <th>Commune</th>
                <td>{{ supplier.citySupplier }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ supplier.phoneSupplier }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ supplier.mailSupplier }}</td>
            </tr>
            <tr>
                <th>Site internet</th>
                <td>{{ supplier.websiteSupplier }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('suppliers_admin') }}">retour à la liste fournisseur</a>

    <a href="{{ path('suppliers_edit', {'id': supplier.id}) }}">modifier fournisseur</a>

    {{ include('suppliers/_delete_form.html.twig') }}
{% endblock %}
