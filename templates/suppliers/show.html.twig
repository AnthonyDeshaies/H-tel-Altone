{% extends 'base.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
    <h1>Fournisseurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Nom fournisseur</th>
                <td>{{ supplier.nameSupplier }}</td>
            </tr>
            <tr>
                <th>Description fournisseur</th>
                <td>{{ supplier.descriptionSupplier |raw }}</td>
            </tr>
            <tr>
                <th>Image fournisseur</th>
                <td><img src="{{ asset('uploads/photos/' ~ supplier.imgSupplier) }}" width="100"></td>
            </tr>
            <tr>
                <th>Adresse fournisseur</th>
                <td>{{ supplier.adressSupplier }}</td>
            </tr>
            <tr>
                <th>Code postal fournisseur</th>
                <td>{{ supplier.cpSupplier }}</td>
            </tr>
            <tr>
                <th>Commune fournisseurr</th>
                <td>{{ supplier.citySupplier }}</td>
            </tr>
            <tr>
                <th>Téléphone fournisseur</th>
                <td>{{ supplier.phoneSupplier }}</td>
            </tr>
            <tr>
                <th>Mail fournisseur</th>
                <td>{{ supplier.mailSupplier }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('suppliers_index') }}">retour à la liste fournisseur</a>

    <a href="{{ path('suppliers_edit', {'id': supplier.id}) }}">modifier fournisseur</a>

    {{ include('suppliers/_delete_form.html.twig') }}
{% endblock %}
