{% extends 'admin.html.twig' %}

{% block title %}Type de chambre{% endblock %}

{% block body %}
    <section id="show_type_room">
        <h1>Type de chambre</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ type_room.id }}</td>
                </tr>
                <tr>
                    <th>Type de chambre</th>
                    <td>{{ type_room.nameType }}</td>
                </tr>
                <tr>
                    <th>Image 1</th>
                    <td>{{ type_room.imgType1 }}</td>
                </tr>
                <tr>
                    <th>Image 2</th>
                    <td>{{ type_room.imgType2 }}</td>
                </tr>
                <tr>
                    <th>Image 3</th>
                    <td>{{ type_room.imgType3 }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ type_room.descriptionTypeRoom }}</td>
                </tr>
                <tr>
                    <th>Nombre de places</th>
                    <td>{{ type_room.nbPlaces }}</td>
                </tr>
            </tbody>
        </table>

        <div class="links">
        <a class="btn" href="{{ path('type_room_admin') }}" rel="noopener noefferer">Retour</a>
        <a class="btn edit" href="{{ path('type_room_edit', {'id': type_room.id}) }}" rel="noopener noefferer">Modier</a>
        {{ include('type_room/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
