{% extends 'admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <section id="show_users">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>RÃ´le</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="links">
            <a class="btn" href="{{ path('user_admin') }}">Retour</a>
            <a class="btn edit" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
            <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn">Supprimer</button>
            </form>
        </div>
    </section>
{% endblock %}
